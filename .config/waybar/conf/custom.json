{
  // Settings
  "custom/settings": {
    "format": "",
    "tooltip-format": "Settings tray\nRight: Restart waybar",
    "on-click-right": "bash ~/.config/hypr/scripts/utils.sh restart-waybar"
  },
  // System
  "custom/system": {
    "format": "",
    "tooltip-format": "System info tray"
  },


  // Arch logo
  "custom/logo": {
    "format": "{ }",
    "on-click": "rofi -show drun -theme ~/.config/rofi/fullscreen.rasi",
    "on-click-right": "alacritty -e bash ~/.config/hypr/scripts/utils.sh remove-packages",
    "tooltip-format": "Left: Open the application launcher\nRight: Remove unused packages"
  },
  // Kernel version
  "custom/kernel": {
    "format": "{}",
    "return-type": "string",
    "exec": "uname --kernel-release"
  },
  // Updates Count
  "custom/updates": {
    "format": " {}",
    "escape": true,
    "return-type": "json",
    "exec": "bash ~/.config/hypr/scripts/updates.sh",
    "restart-interval": 300,
    "on-click": "bash ~/.config/hypr/scripts/utils.sh update-packages",
    "on-click-right": "bash ~/.config/hypr/scripts/utils.sh remove-packages"
  },


  // Power Menu
  "custom/power": {
    "format": "",
    "on-click": "wlogout",
    "tooltip-format": "Power Menu"
  },
  // Lock system
  "custom/lock": {
    "format": "",
    "on-click": "hyprlock",
    "tooltip-format": "Lock"
  },
  //Logout system
  "custom/logout": {
    "format": " ",
    "on-click": "hyprctl dispatch exit",
    "tooltip-format": "Logout"
  },
  //Reboot system
  "custom/reboot": {
    "format": "\uf0e2",
    "on-click": "systemctl reboot",
    "tooltip-format": "Reboot"
  },


  // Wallpaper
  "custom/wallpaper": {
    "format": "",
    "on-click": "bash ~/.config/hypr/scripts/utils.sh wallpaper"
  },

  // Notification
  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "<span foreground='red'><sup></sup></span>",
      "none": "",
      "dnd-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-none": "",
      "inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "inhibited-none": "",
      "dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-inhibited-none": ""
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  }
}
