{
  // Arch logo
  "custom/logo": {
    "format": "{ }",
    "on-click": "sleep 0.2 && rofi -show drun -theme ~/.config/rofi/fullscreen.rasi",
    "tooltip-format": "Left: Open the application launcher\nRight: Remove unused packages"
  },

  // Kernel version
  "custom/kernel": {
    "format": "{}",
    "return-type": "string",
    "exec": "sleep 0.1 && uname --kernel-release"
  },

  // Updates Count
  "custom/updates": {
    "format": "ï‚« {}",
    "restart-interval": 400,
    "exec": "bash ~/.config/hypr/scripts/updates.sh check",
    "return-type": "json",
    "signal": 8,

    "on-click": "bash ~/.config/hypr/scripts/dialog.sh update",
    "on-click-right": "bash ~/.config/hypr/scripts/dialog.sh unused"
  },

  // Group logo
  "group/logo": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 350,
      "children-class": "not-memory",
      "transition-left-to-right": true
    },
    "modules": [
      "custom/logo",
      "custom/kernel",
      "idle_inhibitor",
      "custom/updates"
    ]
  }
}