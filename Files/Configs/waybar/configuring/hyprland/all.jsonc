{
  // Current window name
  "hyprland/window": {
    "format": "{title}",
    "icon": true,
    "separate-outputs": true
  },

  // Current language
  "hyprland/language": {
    "format": " {short}",
    "on-click": "bash ~/.config/hypr/scripts/dialog.sh float keybindings"
  },

  // hypridle switcher
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "",
      "deactivated": ""
    }
  }
}